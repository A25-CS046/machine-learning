# Database Configuration
DATABASE_URL=sqlite:///pm_app.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/pm_database
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Model Storage Configuration
MODEL_STORAGE_BACKEND=local
MODEL_STORAGE_PATH=../artifacts
# For GCS: MODEL_STORAGE_BACKEND=gcs
# For GCS: GCS_MODEL_BUCKET=pm-models-prod

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_NAME=gemini-2.0-flash-exp
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_TIMEOUT=60

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
LOG_LEVEL=INFO
LOG_FORMAT=text
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
